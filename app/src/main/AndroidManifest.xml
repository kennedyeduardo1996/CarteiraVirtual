<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carteira.minha.carteiravirtual">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".config.FirebaseOffline">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.CadastroActivity" />
        <activity
            android:name=".activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DespesasActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RendasActivity"
             />
        <activity android:name=".activity.OrcamentoActivity" />
        <activity android:name=".activity.ListaCategoriaDespesaActivity" />
        <activity
            android:name=".activity.ListaCategoriaRendaActivity"
            android:label="@string/title_activity_lista_categoria_renda" />
        <activity
            android:name=".activity.NovoPrincipal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ConfiguracoesActivity" />
    </application>

</manifest>